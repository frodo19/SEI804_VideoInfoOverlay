<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/overlay_settings">

        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="@string/select_button"
            android:entries="@array/key_code_labels"
            android:entryValues="@array/key_codes"
            android:key="selected_key_code"
            android:summary="@string/select_a_button_to_activate_the_overlay"
            android:title="@string/overlay_button" />
    </PreferenceCategory>

    <PreferenceCategory>
        <SeekBarPreference
            android:key="text_size_key"
            android:title="@string/text_size"
            android:summary="@string/text_size_summary"
            android:defaultValue="12"
            android:max="12" />
    </PreferenceCategory>
</PreferenceScreen>
